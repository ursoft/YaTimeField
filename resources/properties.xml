<resources>
    <properties>
        <property id="appVersion" type="string" /> 
        <property id="fieldCaptionVisible" type="boolean">true</property>
        <property id="flipSegments" type="boolean">false</property>
        <property id="fieldCaption" type="string" />
        <property id="fieldSource1" type="number">0</property>
        <property id="fieldSource2" type="number">-1</property>
        <property id="fieldSource3" type="number">-1</property>
        <property id="fieldSource4" type="number">-1</property>
    </properties>
    <settings>
        <setting propertyKey="@Properties.appVersion" title="@Strings.appVersionTitle">
            <settingConfig type="alphaNumeric" readonly="true" /> 
        </setting>
        <setting propertyKey="@Properties.fieldCaptionVisible" title="@Strings.fieldCaptionVisibleTitle">
            <settingConfig type="boolean" />
        </setting>
        <setting propertyKey="@Properties.flipSegments" title="@Strings.flipLandscapeTitle">
            <settingConfig type="boolean" />
        </setting>
        <setting propertyKey="@Properties.fieldCaption" title="@Strings.fieldCaptionTitle">
            <settingConfig type="alphaNumeric" />
        </setting>
        <setting propertyKey="@Properties.fieldSource1" title="@Strings.fieldSourceTitle">
            <settingConfig type="list" >
            	<listEntry value="-1">@Strings.noFieldSource</listEntry>
            	<listEntry value="0">@Strings.timerTimeSource</listEntry>
            	<listEntry value="1">@Strings.clockTime</listEntry>
            	<listEntry value="2">@Strings.elapsedTime</listEntry>
            	<listEntry value="3">@Strings.timeLeft</listEntry>
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.fieldSource2" title="@Strings.fieldSourceTitle">
            <settingConfig type="list" >
            	<listEntry value="-1">@Strings.noFieldSource</listEntry>
            	<listEntry value="0">@Strings.timerTimeSource</listEntry>
            	<listEntry value="1">@Strings.clockTime</listEntry>
            	<listEntry value="2">@Strings.elapsedTime</listEntry>
            	<listEntry value="3">@Strings.timeLeft</listEntry>
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.fieldSource3" title="@Strings.fieldSourceTitle">
            <settingConfig type="list" >
            	<listEntry value="-1">@Strings.noFieldSource</listEntry>
            	<listEntry value="0">@Strings.timerTimeSource</listEntry>
            	<listEntry value="1">@Strings.clockTime</listEntry>
            	<listEntry value="2">@Strings.elapsedTime</listEntry>
            	<listEntry value="3">@Strings.timeLeft</listEntry>
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.fieldSource4" title="@Strings.fieldSourceTitle">
            <settingConfig type="list" >
            	<listEntry value="-1">@Strings.noFieldSource</listEntry>
            	<listEntry value="0">@Strings.timerTimeSource</listEntry>
            	<listEntry value="1">@Strings.clockTime</listEntry>
            	<listEntry value="2">@Strings.elapsedTime</listEntry>
            	<listEntry value="3">@Strings.timeLeft</listEntry>
            </settingConfig>
        </setting>
    </settings>
</resources>